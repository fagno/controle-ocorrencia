<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gray shadow. -->
    <item
        android:left="5dp"
        android:top="5dp">
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="5dp"
        android:right="5dp"
        android:left="10dp"
        android:top="10dp">
        <shape>
            <solid android:color="@color/azulPrimary" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>